{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "installStep": {
      "type": "object",
      "properties": {
        "qliksense": {"$ref": "#/definitions/qliksense"}
      },
      "required": [
        "qliksense"
      ],
      "additionalProperties": false
    },
    "upgradeStep": {
      "type": "object",
      "properties": {
        "qliksense": {"$ref": "#/definitions/qliksense"}
      },
      "required": [
        "qliksense"
      ],
      "additionalProperties": false
    },
    "aboutStep": {
      "type": "object",
      "properties": {
        "qliksense": {
          "type": "object",
          "properties": {
            "version": {
              "type": "string"
            },
            "description": {
              "$ref": "#/definitions/stepDescription"
            },
            "profile": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "required": [
            "version", "profile"
          ]
        }
      },
      "required": [
        "qliksense"
      ],
      "additionalProperties": false
    },
    "uninstallStep": {
      "type": "object",
      "properties": {
        "qliksense": {"$ref": "#/definitions/qliksense"}
      },
      "required": [
        "qliksense"
      ],
      "additionalProperties": false
    },
    "stepDescription": {
      "type": "string",
      "minLength": 1
    },
    "outputs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "jsonPath": {
            "type": "string"
          },
          "regex": {
            "type": "string"
          },
          "path": {
            "type": "string"
          }
        },
        "additionalProperties": false,
        "required": [
          "name"
        ],
        "oneOf": [
          { "required": [ "jsonPath" ] },
          { "required": [ "regex" ] },
          { "required": [ "path" ] }
        ]
      }
    },
    "qliksense": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "$ref": "#/definitions/stepDescription"
        },
        "arguments": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "cr": {
          "type": "object"
        },
        "flags": {
          "type": "object",
          "additionalProperties": {
            "type": ["null","boolean","number","string"]
          }
        },
        "outputs": {
          "$ref": "#/definitions/outputs"
        }
      },
      "additionalProperties": false,
      "required": [
        "name",
        "description"
      ]
    }
  },
  "type": "object",
  "properties": {
    "install": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/installStep"
      }
    },
    "upgrade": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/upgradeStep"
      }
    },
    "uninstall": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/uninstallStep"
      }
    },
    "about": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/aboutStep"
      }
    }
  },
  "additionalProperties": false
}
